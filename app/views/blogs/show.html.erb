<div class="bandeau_blog">
  <div class="col-sm-12 text-center">
    <h1><%= @blog.titre %></h1>
  </div>
</div>

<div class="content">

<p id="notice"><%= notice %></p>

<div class="row">

  <div class="col-sm-12 text-center">
    <div class="nav-post">
      <a href="<%= blog_path(@blog.id-1) %>"><i class="fa fa-arrow-circle-left" aria-hidden="true"></i></a>
    </div>
    <div class="nav-post">
      <figure class="blog_image">
        <img src="<%= @blog.image %>" alt="<%= @blog.image_legende %>">
        <figcaption><%= @blog.image_legende %></figcaption>
      </figure>
    </div>
    <div class="nav-post">
      <a href="<%= blog_path(@blog.id+1) %>"><i class="fa fa-arrow-circle-right" aria-hidden="true"></i></a>
    </div>
  </div>

</div>

<p>
<% if @blog.categorie %>
<%= @blog.categorie.categorie_nom %>
<% end %>
</p>

<div class="row text-justify">
  <div class="col-sm-12">
    <p class="">
      <%= raw @blog.contenu %>
    </p>
  </div>
</div>

<% if user_signed_in? && current_user.is_admin? %>
<%= link_to 'Edit', edit_blog_path(@blog) %> |
<%= link_to 'Back', blogs_path %>
<% end %>
</div>
