<h1>Liste des catégories</h1>

<table class="table table-striped">
	<thead>
		<tr>
			<td>#</td>	
			<td>Nom de la catégorie</td>
			<td>Actions</td>
		</tr>
	</thead>
	<tbody>
		<% @categories.each do |categorie| %>
		<tr>
			<td><%= categorie.id %></td>
			<td><%= categorie.categorie_nom %></td>
			<td>
				<a href="<%= edit_category_path(categorie) %>"><%= icon('edit') %></a>
				<a href="<%= category_path(categorie) %>" data-confirm="Sûr ?" data-method="delete"><%= icon('remove') %></a>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>

<a href="<%= new_category_path %>"><button class="btn btn-info"><%= t('Créer une nouvelle catégorie') %></button></a>