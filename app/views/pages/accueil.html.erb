<section class="title-bar-home">
  <div class="nom_resume">
    <h1>ARTANDTEO</h1>
    <h5><%= t('accueil.creation_communication_digitale') %></h5>
  </div>
  <div class="slogan">
    <h2><%= t('accueil.slogan') %></h2>
  </div>
  <div class="row">
    <div class="col-md-3 col-md-offset-2 text-center">
      <button type="button" class="btn btn-default"><%= t('accueil.nous_trouver') %></button>
    </div>
    <div class="col-md-3 col-md-offset-2 text-center">
      <button type="button" class="btn btn-info"><%= t('accueil.nous_contacter') %></button>
    </div>
  </div>
</section>

<section class="tryptic">
  <div class="row">
    <% for n in 1..3 do %>
      <div class="col-md-4 text-center">
        <div class="tryptic_<%= n %>">
          <h3><%= t('accueil.title_tryp' + n.to_s) %></h3>
          <img src="/img/tryp<%= n %>.png" alt="<%= t('accueil.alt_tryp' + n.to_s) %>">
          <hr>
          <p><%= t('accueil.texte_tryp' + n.to_s) %></p>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</section>

<section class="objectifs">
  <div class="row">
    <div class="col-md-12 text-center">
      <h3><%= t('accueil.objectif') %></h3>
      <ul>
        <li><%= t('accueil.first') %></li>
        <li><%= t('accueil.second') %></li>
        <li><%= t('accueil.third') %></li>
      </ul>
      <p>
        <%= t('accueil.txt_objectif') %>
      </p>
    </div>
  </div>
</section>

<section class="besoin">
  <div class="row">
    <div class="col-md-6 col-md-offset-6">
      <div class="card_besoin">
        <h4><%= t('accueil.titre_visib') %></h4>
        <p><%= t('accueil.txt_visib') %></p>
        <div class="sav_plus">
          <button type="button" class="btn btn-default"><%= t('savoir_plus') %></button>
        </div>
      </div>
      <div class="card_besoin">
        <h4><%= t('accueil.titre_besoin') %></h4>
        <p><%= t('accueil.txt_besoin1') %></p>
        <hr>
        <p><%= t('accueil.txt_besoin2') %></p>
        <div class="sav_plus">
          <button type="button" class="btn btn-default"><%= t('savoir_plus') %></button>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="last_posts">
  <div class="row">
    <div class="col-md-12 text-center">
      <h3><%= t('accueil.titre_last_posts') %></h3>
    </div>
  </div>
  <div class="row">

    <div class="col-md-6"> <!-- AVANT DERNIER POST -->
      <div class="post">
        <img class="img-responsive" src="<%= @before_last_post.image %>" alt="<%= @before_last_post.image_legende %>" />
        <div class="text_post">
          <h2><%= @before_last_post.titre %></h2>
          <p class="d_post">Posté le <%= @before_last_post.created_at %></p>
          <div class="contenu"><%= raw(@before_last_post.contenu).strip.truncate(250) %></div>
          <div class="sav_plus">
            <form action="<%= blog_path(@before_last_post) %>">
              <button type="submit" value="<%= @before_last_post.titre %>" class="btn btn-default">Lire plus</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-6"> <!-- DERNIER POST -->
      <div class="post">
          <img class="img-responsive" src="<%= @last_post.image %>" alt="<%= @last_post.image_legende %>" />

          <div class="text_post">
            <h2><%= @last_post.titre %></h2>
            <p class="d_post">Posté le <%= @last_post.created_at %></p>
            <div class="contenu"><%= raw(@last_post.contenu).truncate(250) %></div>
            <div class="sav_plus">
              <form action="<%= blog_path(@last_post) %>">
                <button type="submit" value="<%= @last_post.titre %>" class="btn btn-default">Lire plus</button>
              </form>
            </div>
            </p>
          </div>

      </div>
    </div>

  </div>
</section>

